<div class="row">
    {{#each notes }}
    
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between alims-center">
                    {{title}}
                </h4>
                <hr style="border-width: 2px; background-color: white;"> 
                <!-- Agrega una lÃ­nea horizontal -->
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=delete" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <button type="submit" class="btn btn-danger bt-sm">delete</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>
